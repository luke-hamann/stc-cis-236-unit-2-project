@model Whale
@{
    if (Model.Id == null)
    {
        ViewData["Title"] = "Add Whale";
    }
    else
    {
        ViewData["Title"] = "Edit " + Model.CommonName;
    }
}

<form asp-controller="Whale" asp-action="Edit" asp-route-id="@Model.Id" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2 class="mt-3">General Info</h2>
    <div class="row mt-3">
        <label asp-for="CommonName" class="form-label col-sm-3">
            Common Name
        </label>
        <input asp-for="CommonName" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="ScientificName" class="form-label col-sm-3">
            Scientific Name
        </label>
        <input asp-for="ScientificName" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="Description" class="form-label col-sm-3">
            Description
        </label>
        <textarea asp-for="Description" class="form-control col">
        </textarea>
    </div>
    <h2 class="mt-3">Quick Facts</h2>
    <div class="row mt-3">
        <label asp-for="Lifespan" class="form-label col-sm-3">
            Lifespan
        </label>
        <input asp-for="Lifespan" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="MigrationDistance" class="form-label col-sm-3">
            Migration Distance
        </label>
        <input asp-for="MigrationDistance" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="Population" class="form-label col-sm-3">
            Population
        </label>
        <input asp-for="Population" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="ConservationStatus" class="form-label col-sm-3">
            Conservation Status
        </label>
        <select asp-for="ConservationStatus" class="form-select col">
            <option value="0">N/A</option>
            <option value="7">Least Concern</option>
            <option value="6">Near Threatened</option>
            <option value="5">Vulnerable</option>
            <option value="4">Endangered</option>
            <option value="3">Critically Endangered</option>
            <option value="2">Extinct in the Wild</option>
            <option value="1">Extinct</option>
        </select>
    </div>
    <h2 class="mt-3">Locations</h2>
    <table class="table">
        <tr>
            <td>
                <input type="checkbox" asp-for="IsInArcticOcean" />
                <label asp-for="IsInArcticOcean">
                    Arctic Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" asp-for="IsInArcticOcean" />
                <label asp-for="IsInArcticOcean">
                    Arctic Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInAtlanticOcean" />
                <label asp-for="IsInAtlanticOcean">
                    Atlantic Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInIndianOcean" />
                <label asp-for="IsInIndianOcean">
                    Indian Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInPacificOcean" />
                <label asp-for="IsInPacificOcean">
                    Pacific Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInSouthernOcean" />
                <label asp-for="IsInSouthernOcean">
                    Southern Ocean
                </label>
            </td>
        </tr>
    </table>


    <div class="mt-3">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <a asp-controller="Whale" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>
