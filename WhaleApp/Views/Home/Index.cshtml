@model List<Whale>
@{
    ViewData["Title"] = "Whale App";
}

<h1>Whales</h1>

@if(Model.Count == 0)
{
    <p>There are no whales.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Common Name</th>
                <th>Scientific Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Whale whale in Model)
            {
                <tr>
                    <td>@whale.CommonName</td>
                    <td>@whale.ScientificName</td>
                    <td>
                        <a asp-controller="Whale" asp-action="Detail"
                            asp-route-id="@whale.Id">Detail</a>
                    </td>
                    <td>
                        <a asp-controller="Whale" asp-action="Edit"
                            asp-route-id="@whale.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
