@*
    Title: Deletion Confirmation View
    Purpose: This page prompts the user to confirm the deletion of a whale.
*@

@model Whale
@{
    ViewData["Title"] = "Confirm Deletion";
}

<p>Are you sure you want to delete "@Model.CommonName"?</p>

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">
        Delete
    </button>
    <a asp-action="Detail" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="btn btn-secondary">
        Cancel
    </a>
</form>
