@*
    Title: Whale Form
    Purpose: This page provides a form for adding or editing a whale. It
             contains inputs that map to each of the properties of the Whale
             class (except Id).
*@

@model Whale
@{
    ViewData["Title"] = (Model.Id == null ? "Add" : "Edit") + " Whale";
}

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="row text-danger mt-3 ms-2">
    </div>

    <div class="row mt-3">
        <label asp-for="CommonName" class="form-label col-lg">
            Common Name*
        </label>
        <input asp-for="CommonName" class="form-control col-lg" />
        <span class="col-lg"></span>
    </div>
    <div class="row mt-3">
        <label asp-for="ScientificName" class="form-label col-lg">
            Scientific Name
        </label>
        <input asp-for="ScientificName" class="form-control col-lg" />
        <span class="col-lg"></span>
    </div>
    <div class="row mt-3">
        <label asp-for="Description" class="form-label">
            <h2>Description</h2>
        </label>
        <textarea asp-for="Description" rows="3" class="form-control">
        </textarea>
    </div>

    <h2 class="mt-3">Quick Facts</h2>

    <div class="row mt-3">
        <label asp-for="Lifespan" class="form-label col-lg">
            Lifespan
        </label>
        <input asp-for="Lifespan" class="form-control col-lg" />
        <span class="col-lg">years</span>
    </div>
    <div class="row mt-3">
        <label asp-for="MigrationDistance" class="form-label col-lg">
            Migration Distance
        </label>
        <input asp-for="MigrationDistance" class="form-control col-lg" />
        <span class="col-lg">miles</span>
    </div>
    <div class="row mt-3">
        <label asp-for="Population" class="form-label col-lg">
            Population
        </label>
        <input asp-for="Population" class="form-control col-lg" />
        <span class="col-lg"></span>
    </div>
    <div class="row mt-3">
        <label asp-for="ConservationStatus" class="form-label col-lg">
            Conservation Status
        </label>
        <select asp-for="ConservationStatus" class="form-select col-lg">
            @for (int i = 0; i < ConservationStatus.CodeCount; i++)
            {
                <option value="@i">
                    @ConservationStatus.CodeToString(i)
                </option>
            }
        </select>
        <span class="col-lg"></span>
    </div>

    <h2 class="mt-3">Locations</h2>

    <table class="table">
        <tr>
            <td>
                <input asp-for="IsInArcticOcean" />
                <label asp-for="IsInArcticOcean">
                    Arctic Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInAtlanticOcean" />
                <label asp-for="IsInAtlanticOcean">
                    Atlantic Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInIndianOcean" />
                <label asp-for="IsInIndianOcean">
                    Indian Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInPacificOcean" />
                <label asp-for="IsInPacificOcean">
                    Pacific Ocean
                </label>
            </td>
        </tr>
        <tr>
            <td>
                <input asp-for="IsInSouthernOcean" />
                <label asp-for="IsInSouthernOcean">
                    Southern Ocean
                </label>
            </td>
        </tr>
    </table>

    <div class="mt-5">
        <input type="submit" value="Submit" class="btn btn-primary" />
        @if (Model.Id == null)
        {
            <a asp-action="Index" class="btn btn-secondary">
                Cancel
            </a>
        }
        else
        {
            <a asp-action="Detail" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="btn btn-secondary">
                Cancel
            </a>
        }
    </div>
</form>
