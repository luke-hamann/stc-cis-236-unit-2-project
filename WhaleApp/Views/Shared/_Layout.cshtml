@*
    Title: Base Layout
    Purpose: This provides a base layout for all views. It includes the
             necessary elements to enable Bootstrap, a navigation sidebar, slots
             for the page title, a slot for the main content, and a footer.
*@
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body class="container">
    <div class="row mt-5">
        <nav class="col-sm-3 mt-3">
            <ul class="list-group list-unstyled">
                <li class="mb-3">
                    <a asp-action="Index" class="list-group-item">
                        🏠 Home
                    </a>
                </li>
                @foreach (Whale w in ViewBag.Whales)
                {
                    <li class="d-none d-sm-block">
                        <a asp-action="Detail" asp-route-id="@w.Id" asp-route-slug="@w.Slug" class="list-group-item">
                            @w.CommonName
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <div class="col-sm-9 mt-3">
            <header>
                <h1>@ViewData["Title"]</h1>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="row mt-5">
        <p>
            &copy; @DateTime.Now.Year Luke Hamann
        </p>
    </footer>
</body>
</html>
